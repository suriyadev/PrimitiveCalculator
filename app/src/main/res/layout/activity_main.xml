<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="500"
            android:scrollHorizontally="true"
            android:textSize="50dp" />
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cpy_to_clipboard"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/copy"
            android:text="Copy"
            android:textColor="@android:color/transparent"
            android:textStyle="bold" />

        <Button
            android:id="@+id/speak"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@mipmap/speech"
            android:text="Speak"
            android:textColor="@android:color/transparent"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/num_one"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="1"
                tools:text="1" />

            <Button
                android:id="@+id/num_two"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="2"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/num_three"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="3" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="DELETE"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num_four"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="4" />

            <Button
                android:id="@+id/num_five"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="5" />

            <Button
                android:id="@+id/num_six"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="6" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num_seven"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="7" />

            <Button
                android:id="@+id/num_eight"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="8" />

            <Button
                android:id="@+id/num_nine"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="9" />

            <Button
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="."
                android:textSize="14sp" />

            <Button
                android:id="@+id/num_zero"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="0" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="/" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:text="-" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/equal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>